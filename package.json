{
  "name": "chiledev",
  "version": "1.0.0",
  "description": "Monitoreo automatizado de tendencias y empleabilidad tech en Chile",
  "private": true,
  "workspaces": [
    "scraper",
    "frontend"
  ],
  "scripts": {
    "dev:scraper": "pnpm --filter @chiledev/scraper dev",
    "dev:frontend": "pnpm --filter @chiledev/frontend dev",
    "start:scraper": "pnpm --filter @chiledev/scraper start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["jobs", "tech", "chile", "scraping", "data-analysis"],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0"
}
